
@model terminarz_projekt.Models.Osoby

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Załóż konto</h1>

<h4>Aby zarezerwować termin konieczne jest założenie konta!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Imie" class="control-label">Imię</label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label">Nazwisko</label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="drugie_imie" class="control-label">Drugie imię</label>
                <input asp-for="drugie_imie" class="form-control" />
                <span asp-validation-for="drugie_imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="plec" class="control-label">Płeć</label>
                <input asp-for="plec" class="form-control" />
                <span asp-validation-for="plec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="data_urodzenia" class="control-label">Data urodzenia (DD.MM.RRRR)</label>
                <input asp-for="data_urodzenia" class="form-control" />
                <span asp-validation-for="data_urodzenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nr_telefonu" class="control-label">Numer telefonu</label>
                <input asp-for="nr_telefonu" class="form-control" />
                <span asp-validation-for="nr_telefonu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hasło" class="control-label">Hasło</label>
                <input asp-for="Hasło" class="form-control" type="password" />
                <span asp-validation-for="Hasło" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz konto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>Masz już konto? Zaloguj się!</p>

<div class="form-group">
    <form  asp-controller="Login" asp-action="Index">
        <input type="submit" value="Zaloguj się" class="btn btn-primary" />

    </form>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Powrót do strony głównej</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
